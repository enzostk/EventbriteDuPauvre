<head>
  <h1>Welcome to EventBriteDuPauvre!</h1></br>
  <h3>Hey! What's up my <strong>nigga</strong>?</h3></br>

  <link rel="preconnect" href="https://fonts.gstatic.com"> 
  <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet"> 
</head>

<body>

  <center>
    <div class="jumbotron">
      <div class="container">
        <div class=fond>
          <h1>Welcome to EventBriteLite !<br/>On this page you'll be able to browse all events to come. </h1>

        </div>
      </div>
    </div>
  </center>

  <center>
    <div class=row style="width: 85%">
      <% puts @event %>
      <% @events.each do |event| %>
      <% if event.users %>
      <div class="col-sm-6">
        <div class="card" style="margin: 10px; padding: 25px 0 25px 0; border: 2.5px solid lightgrey; border-radius: 50px">
          <div class="card-header">
            <h3><%= event.title %></h3>
          </div>
          <div class="card-body">
            <h4><%= event.description %></h4>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </center>
</body>

